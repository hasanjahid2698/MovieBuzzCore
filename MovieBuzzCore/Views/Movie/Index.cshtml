@model IEnumerable<MovieBuzz.Domain.Entities.Movie>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Movie List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Movie" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Create New Movie
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                <tr>
                    <th>Id</th>
                    <th>MovieName</th>
                    <th>Description</th>
                    <th>Title</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Id</td>
                        <td>@obj.MovieName</td>
                        <td>@obj.Description</td>
                        <td>@obj.Title</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Movie" asp-action="Update" asp-route-movieId="@obj.Id"
                                   class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Movie" asp-action="Delete" asp-route-movieId="@obj.Id"
                                   class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr> 
                }
            </tbody>
        </table>
    </div>
</div>